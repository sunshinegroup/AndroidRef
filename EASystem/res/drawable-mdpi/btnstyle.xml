<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
  <shape>
      <gradient android:startColor="#FFFF00" android:endColor="#C0C0C0"
      android:angle="0"/>
      <stroke android:width="4dip" android:color="#b0000000"/>
      <corners android:radius="15dp"/>
  
  </shape>
  
  </item>
  <item android:state_focused="true">
  <shape>
      <gradient android:startColor="#FFFFFFFF" android:endColor="#00000000"
      android:angle="270"/>
      <stroke android:width="1dip" android:color="#00000000"/>
      <corners android:radius="15dp"/>
      <padding android:left="8dp" android:top="8dp" android:right="8dp"
               android:bottom="8dp"/>
  
  </shape>
  
  </item>
  <item>
  <shape>
      <gradient android:startColor="#FFFFFFFF" android:endColor="#00000000"
      android:angle="270"/>
      <stroke android:width="4dip" android:color="#00000000"/>
      <corners android:radius="15dp"/>
      <padding android:left="8dp" android:top="8dp" android:right="8dp"
               android:bottom="8dp"/>
  
  </shape>
  
  </item>
</selector>
